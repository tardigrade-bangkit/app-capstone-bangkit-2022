<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneBangkit2022" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Button styles. -->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Parent">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue_600</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Button.Parent.Wide">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Button.Children">
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="Button.Children.Blue">
        <item name="strokeColor">@color/blue_700</item>
        <item name="backgroundTint">@color/blue_300</item>
        <item name="rippleColor">@color/blue_500</item>
    </style>

    <style name="Button.Children.Yellow">
        <item name="strokeColor">@color/yellow_700</item>
        <item name="backgroundTint">@color/yellow_300</item>
        <item name="rippleColor">@color/yellow_500</item>
    </style>

    <style name="Button.Children.Red">
        <item name="strokeColor">@color/red_700</item>
        <item name="backgroundTint">@color/red_300</item>
        <item name="rippleColor">@color/red_500</item>
    </style>

    <style name="Button.Children.Green">
        <item name="strokeColor">@color/green_700</item>
        <item name="backgroundTint">@color/green_300</item>
        <item name="rippleColor">@color/green_500</item>
    </style>

    <style name="Button.Children.Green.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Children.Blue.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Children.Red.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Children.Yellow.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>


</resources>