<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles. -->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Parent">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Button.Parent.Secondary">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:elevation">2dp</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Button.Parent.Alternative">
        <item name="android:backgroundTint">@color/red_600</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Button.Parent.Wide">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Button.Children">
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="Button.Children.Blue">
        <item name="strokeColor">@color/blue_700</item>
        <item name="backgroundTint">@color/blue_300</item>
        <item name="rippleColor">@color/blue_500</item>
    </style>

    <style name="Button.Children.Yellow">
        <item name="strokeColor">@color/yellow_700</item>
        <item name="backgroundTint">@color/yellow_300</item>
        <item name="rippleColor">@color/yellow_500</item>
    </style>

    <style name="Button.Children.Red">
        <item name="strokeColor">@color/red_700</item>
        <item name="backgroundTint">@color/red_300</item>
        <item name="rippleColor">@color/red_500</item>
    </style>

    <style name="Button.Children.Green">
        <item name="strokeColor">@color/green_700</item>
        <item name="backgroundTint">@color/green_300</item>
        <item name="rippleColor">@color/green_500</item>
    </style>

    <style name="Button.Children.Green.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Children.Blue.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Children.Red.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Children.Yellow.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Text styles. -->
    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Heading">
        <item name="fontFamily">@font/notosans_black</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Text.Heading.1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Heading.2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Heading.3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Heading.4">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Heading.5">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Heading.6">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body">
        <item name="fontFamily">@font/notosans_medium</item>
    </style>

    <style name="Text.Body.1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body.2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body.3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Body.4">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Body.5">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Text.Body.6">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Text.Body.7">
        <item name="android:textSize">6sp</item>
    </style>

    <style name="InputText" parent="@android:style/Widget.EditText">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/input_with_border</item>
    </style>

    <style name="InputText.Pin">
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_without_border</item>
    </style>

</resources>