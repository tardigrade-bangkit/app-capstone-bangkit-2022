<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="@color/blue_800"
    app:strokeWidth="4dp"
    android:background="@drawable/rectangle_rounded_8dp">

    <ImageView
        android:id="@+id/lesson_cover_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:src="@drawable/lesson_cover_image_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rectangle_rounded_8dp"
            android:backgroundTint="@color/green_200"
            android:textAppearance="@style/Text.Heading.5"
            tools:text="Lesson Title"
            android:textColor="@color/green_900"/>

        <TextView
            android:id="@+id/lesson_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/rectangle_rounded_8dp"
            android:backgroundTint="@color/blue_800"
            android:textAppearance="@style/Text.Body.4"
            tools:text="Lesson Type"
            android:textColor="@color/blue_100"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</FrameLayout>